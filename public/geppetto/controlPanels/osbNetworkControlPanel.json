{
    "OSB Control Panel": {
        "Network Info": {
            "Connectivity": {
                "actions": [
                	"if ($ENTER_ID.getSubNodesOfDomainType('Synapse').length == 0){G.addWidget(1).setMessage('No connection found in this network').setName('Warning Message');}else{G.addWidget(6).setData($ENTER_ID,{linkType:function(c){return c.getSubNodesOfDomainType('Synapse')[0].id}}).setName('Connectivity Widget on network ' + $ENTER_ID.getName())}"
                ],
                "icon": "gpt-make-group",
                "label": "Connectivity",
                "tooltip": "Loads the connectivity matrix widget"
            }
        },
        "Cell Info": {
            "Cell": {
                "actions": [
                    "executeOnSelection(showSummaryTreeView)"
                ],
                "icon": "gpt-pyramidal-cell",
                "label": "Cell Info",
                "tooltip": "Information on the selected cell"
            },
            "Channels": {
                "actions": [
                    "executeOnSelection(showChannelTreeView)"
                ],
                "icon": "gpt-ion-channel",
                "label": "Channels",
                "tooltip": "Ion channels present in the selected cell"
            },
            "CellVisual": {
		      "actions": [
		      	"executeOnSelection(showVisualTreeView)"
		      ],
		      "icon": "gpt-pyramidal-cell",
		      "label": "Cell Visual",
		      "tooltip": "Visual information on selected cell"
		    }
        }
    }
}
