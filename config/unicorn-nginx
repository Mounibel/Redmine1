#Rails settings
upstream pirati_redmine_server {
   # This is the socket we configured in unicorn.rb
   server unix:/opt/webs/production/pirati-redmine/tmp/sockets/unicorn.sock
   fail_timeout=0;
}

server {
        listen 80;
        client_max_body_size 64M;
        server_name redmine.pirati.cz;

        keepalive_timeout 5;

        # Location of our static files
        root /opt/webs/production/pirati-redmine/current/public;

        location / {
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header Host $http_host;
          proxy_redirect off;

          # If you don't find the filename in the static files
          # Then request it from the unicorn server
          if (!-f $request_filename) {
            proxy_pass http://pirati_redmine_server;
            break;
          }
        }

        error_page 500 502 503 504 /500.html;
        location = /500.html {
          root /opt/webs/production/pirati-redmine/public;
        }
}
